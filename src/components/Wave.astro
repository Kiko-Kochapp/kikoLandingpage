---
// src/components/Wave.astro
interface Props {
    topColor: string;
    fillColor: string;
    flip?: boolean;
    variant?: 1 | 2 | 3; // Drei sanfte Variationen
}

const { topColor, fillColor, flip = false, variant = 1 } = Astro.props;

const paths = {
    // Variante 1: Schwerpunkt links
    1: "M0,0V27.35A600.21,600.21,0,0,0,321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0Z",
    // Variante 2: Schwerpunkt mittig/rechts (leicht flacher)
    2: "M0,0V15.46C112,4.55,224-6.36,336,15.46c141,27.5,282,82.5,423,82.5,147,0,294-55,441-82.5V0H0Z",
    // Variante 3: Zwei kleine HÃ¼gel (ausgeglichener)
    3: "M0,0V45.29c150-30,300,60,450,60,150,0,300-90,450-90,100,0,200,30,300,45V0H0Z"
};
---

<div
        class={`w-full leading-[0] overflow-hidden ${flip ? 'rotate-180' : ''}`}
        style={`background-color: ${topColor};`}
>
    <svg
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
            class="relative block w-full h-[60px] md:h-[100px] -mb-[1px]"
            style={`fill: ${fillColor};`}
    >
        <path d={paths[variant]}></path>
    </svg>
</div>